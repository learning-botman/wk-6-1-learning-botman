{
  "name": "bookstore-demo",
  "version": "1.0.0",
  "description": "A simple book selling app with Paystack integration",
  "main": "index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "npx cypress run --config baseUrl=http://localhost:3000",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "lhci:upload": "lhci upload",
    "lhci:autorun": "lhci autorun",
    "playwright:test": "npx playwright test",
    "playwright:show-report": "npx playwright show-report playwright-report",
    "test:ci": "react-scripts test --coverage --watchAll=false",
    "check:coverage": "node scripts/check-coverage.js"
  },
  
  "playwright": {
    "reporter": [["list"], ["html", {"outputFolder": "playwright-report"}]]
  },
  "dependencies": {
    "@paystack/inline-js": "^2.22.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "cypress": "^13.0.0",
    "cypress-axe": "^1.7.0",
    "@lhci/cli": "^0.13.0",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0"
    ,"@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "msw": "^1.2.1"
  },
  "lighthouseci": {
    "ci": {
      "collect": {
        "url": ["http://localhost:3000/", "http://localhost:3000/catalog", "http://localhost:3000/cart"],
        "numberOfRuns": 2,
        "settings": { "chromeFlags": "--no-sandbox" }
      },
      "assert": {
        "assertions": {
          "categories:performance": ["error", {"minScore": 0.7}],
          "categories:accessibility": ["warn", {"minScore": 0.9}]
        }
      },
      "upload": {
        "target": "filesystem",
        "outputDir": "./lhci-results"
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
